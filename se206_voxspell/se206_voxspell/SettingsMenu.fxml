<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="se206_voxspell.SettingsMenuController">
   <bottom>
      <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <buttons>
            <Button fx:id="aboutBtn" mnemonicParsing="false" onAction="#showAbout" text="About" />
          <Button fx:id="backBtn" mnemonicParsing="false" onAction="#backToMenu" text="Back" />
        </buttons>
         <BorderPane.margin>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </BorderPane.margin>
      </ButtonBar>
   </bottom>
   <center>
      <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER">
               <children>
                  <Label text="Voice" />
                  <HBox alignment="CENTER" spacing="15.0">
                     <children>
                        <ComboBox fx:id="voiceComboBox" onAction="#changeVoice" />
                        <Button fx:id="previewBtn" mnemonicParsing="false" onAction="#previewVoice" text="Preview" />
                     </children>
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="5.0" />
                     </padding>
                  </HBox>
               </children>
            </VBox>
            <VBox alignment="CENTER">
               <children>
                  <Label text="Soundtrack" />
                  <HBox alignment="CENTER" spacing="15.0">
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="5.0" />
                     </padding>
                     <children>
                        <ComboBox fx:id="soundtrackComboBox" onAction="#changeTrack" />
                        <Button fx:id="previewTrackBtn" mnemonicParsing="false" onAction="#previewTrack" text="Preview" />
                     </children>
                  </HBox>
                  <Slider fx:id="soundtrackVolumeBar" blockIncrement="0.01" majorTickUnit="0.01" max="0.5" minorTickCount="0" snapToTicks="true" value="0.1" />
               </children>
            </VBox>
            <VBox alignment="CENTER">
               <children>
                  <Label text="Remove User" />
                  <Button fx:id="resetBtn" mnemonicParsing="false" onAction="#resetGame" text="Reset" />
               </children>
            </VBox>
         </children>
         <BorderPane.margin>
            <Insets bottom="15.0" left="15.0" right="15.0" />
         </BorderPane.margin>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" />
         </padding>
      </VBox>
   </center>
   <top>
      <Label text="SETTINGS" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets left="15.0" right="15.0" top="15.0" />
         </BorderPane.margin>
         <padding>
            <Insets left="15.0" right="15.0" top="15.0" />
         </padding>
         <styleClass>
            <String fx:value="title-label" />
            <String fx:value="subtitle" />
         </styleClass>
      </Label>
   </top>
</BorderPane>
