<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="se206_voxspell.ShopMenuController">
   <top>
      <Label text="VOX Store" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets left="15.0" right="15.0" top="15.0" />
         </BorderPane.margin>
         <padding>
            <Insets left="15.0" right="15.0" top="15.0" />
         </padding>
         <styleClass>
            <String fx:value="title-label" />
            <String fx:value="subtitle" />
         </styleClass>
      </Label>
   </top>
   <center>
      <HBox BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </BorderPane.margin>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
         <children>
            <VBox alignment="CENTER" spacing="15.0">
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
               <HBox.margin>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </HBox.margin>
               <children>
                  <ComboBox fx:id="shopTypeCombo" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onAction="#updateList" />
                  <ListView fx:id="salesListView" />
               </children>
            </VBox>
            <VBox alignment="CENTER" spacing="15.0">
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
               <children>
                  <Label fx:id="costLabel" text="Label" />
                  <Button fx:id="buyBtn" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#buyItem" text="Buy" />
               </children>
            </VBox>
         </children>
      </HBox>
   </center>
   <bottom>
      <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <buttons>
          <Button fx:id="backBtn" mnemonicParsing="false" onAction="#goBack" text="Back" />
        </buttons>
         <BorderPane.margin>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </BorderPane.margin>
      </ButtonBar>
   </bottom>
</BorderPane>
